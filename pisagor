a = 1
b = 1
sıra = 1
liste = [i ** 2 for i in range(1, 100) ]
while a < 100:
    b = 1
    
    while b < 100:
      
        toplam = (a ** 2) + (b ** 2)
        
        for x in liste:
            if toplam == x:
          
                print(sıra, "-->a:", a, "b:", b, "c:",(x**0.5))
                sıra += 1
        b += 1
    a += 1
